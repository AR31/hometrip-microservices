# Payment Service Configuration

# Server
PORT=4005
NODE_ENV=development

# Database
MONGODB_URI=mongodb://mongodb:27017/hometrip_payment

# Stripe
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLIC_KEY=pk_test_your_public_key_here

# Service URLs
BOOKING_SERVICE_URL=http://booking-service:4004
USER_SERVICE_URL=http://user-service:4002
NOTIFICATION_SERVICE_URL=http://notification-service:4006
ANALYTICS_SERVICE_URL=http://analytics-service:4007

# Event Bus
EVENT_BUS_URL=http://event-bus:5000
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672

# Email Service
EMAIL_SERVICE_URL=http://notification-service:4006/api/emails

# Logging
LOG_LEVEL=info
LOG_DIR=/app/logs

# Feature Flags
ENABLE_WEBHOOKS=true
ENABLE_STRIPE_CONNECT=true
ENABLE_REFUNDS=true
