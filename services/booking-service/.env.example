# Application Configuration
NODE_ENV=development
PORT=4004
SERVICE_HOST=0.0.0.0
SERVICE_VERSION=1.0.0

# MongoDB Configuration
MONGODB_URI=mongodb://hometrip:hometrip_mongo_pass@mongodb:27017/booking_db?authSource=admin

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://hometrip:hometrip_rabbitmq_pass@rabbitmq:5672

# Consul Service Discovery
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=info

# Stripe Configuration
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Service URLs
LISTING_SERVICE_URL=http://listing-service:4003
PAYMENT_SERVICE_URL=http://payment-service:4005
USER_SERVICE_URL=http://user-service:4002
NOTIFICATION_SERVICE_URL=http://notification-service:4007
COUPON_SERVICE_URL=http://coupon-service:4008
