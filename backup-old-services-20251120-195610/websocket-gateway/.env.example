# ============================================
# WEBSOCKET GATEWAY ENVIRONMENT
# ============================================

# Application
NODE_ENV=development
PORT=3002
SERVICE_HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis Configuration (for Socket.io adapter)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8000,https://hometrip.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=logs

# Services URLs
MESSAGE_SERVICE_URL=http://message-service:4006
NOTIFICATION_SERVICE_URL=http://notification-service:4009
BOOKING_SERVICE_URL=http://booking-service:4004

# Security
ALLOW_AUTH_WITHOUT_JWT=false

# Metrics
METRICS_ENABLED=true
