# Logger Service Configuration

# Server
PORT=5000
NODE_ENV=development
CORS_ORIGIN=*

# MongoDB
MONGODB_URI=mongodb://localhost:27017/logs_db

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=hometrip-logs

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_EXCHANGE=hometrip-logs

# Logging
LOG_LEVEL=info

# Log Retention (in days)
ERROR_RETENTION_DAYS=90
WARN_RETENTION_DAYS=60
INFO_RETENTION_DAYS=30
DEBUG_RETENTION_DAYS=7
VERBOSE_RETENTION_DAYS=3

# API Authentication
API_KEY_HEADER=x-api-key
VALID_API_KEYS=logger-service-key,service-api-key-1,service-api-key-2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Batch Processing
BATCH_SIZE=100
BATCH_TIMEOUT_MS=5000

# Health Check
HEALTH_CHECK_INTERVAL=30000
